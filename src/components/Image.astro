---
const { name, url } = Astro.props
const img = Astro.props.name.replaceAll('.', '').replaceAll(' ', '_').toLowerCase();

---

<div class="image">
  <a href={url}><img src={`/images/${img}.webp`} alt={name} /></a>
  <div class="legend">
    <slot />
  </div>
</div>


<style lang="scss">
  .image {}

  img {
    display: block;
    width: 100%;
    aspect-ratio: 3104/1974;
  }

  .legend {
    text-align: center;
		font-size: var(--step--1);
    font-style: italic;
    margin-top: -5px;
  }
</style>