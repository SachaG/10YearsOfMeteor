---
import Logo from '../components/Logo.astro';
const getMeta = () => {

	const title = '10 Years of Meteor'
	const socialImageUrl = 'https://meteor10.sachagreif.com/social.png';
	const description = 'A look back at a JavaScript framework pioneer'
	const url = `https://meteor10.sachagreif.com`

	const meta = [
		{ charset: 'utf-8' },
		{ name: 'description', content: description },
		// responsive
		{ name: 'viewport', content: 'width=device-width, initial-scale=1' },
		// facebook
		{ property: 'og:type', content: 'article' },
		{ property: 'og:url', content: url },
		{ property: 'og:image', content: socialImageUrl },
		{ property: 'og:title', content: title },
		{ property: 'og:description', content: description },
		// twitter
		{ name: 'twitter:site', content: 'SachaGreif' },
		{ name: 'twitter:creator', content: 'SachaGreif' },
		{ name: 'twitter:card', content: 'summary_large_image' },
		{ name: 'twitter:image:src', content: socialImageUrl },
		{ name: 'twitter:title', content: title },
		{ name: 'twitter:description', content: description }
	]
	return meta
}


---

<html lang="en">

<head>
	{getMeta().map((tag) =>
	<meta {...tag} />)}
	<link rel="icon" type="image/x-icon" href="/favicon.svg" />
	<link rel="webmention" href="https://webmention.io/meteor10.sachagreif.com/webmention" />
	<link rel="pingback" href="https://webmention.io/meteor10.sachagreif.com/xmlrpc" />
</head>

<body>
	<Logo />

	<main>
		<slot />
	</main>
</body>

</html>

<style lang="scss" is:global>
	@import '../stylesheets/utopia.css';

	:root {
		--layoutWidth: 760px;
		--halfSpacing: 10px;
		--spacing: 20px;
		--doubleSpacing: 40px;
		--quadrupleSpacing: 80px;
		--backgroundColor: #ececf3;
		--altBackgroundColor: #f9d703;
		--borderColor: #c5c5cb;
		--textColor: #242421;
		--linkColor: #1c06e0;
		--visitedColor: #606058;
		--baseFontFamily: Apple Garamond, Baskerville, Times New Roman, Droid Serif, Times, Source Serif Pro, serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol;
		--altFontFamily: -apple-system, BlinkMacSystemFont, avenir next, avenir, segoe ui, helvetica neue, helvetica, Cantarell, Ubuntu, roboto, noto, arial, sans-serif;
	}


	html,
	body {
		font-family: var(--baseFontFamily);
		margin: 0;
		// font-size: 22px;
		font-size: 16px;
		line-height: 1.65;
		background: var(--backgroundColor);
		color: var(--textColor);
		padding: var(--halfSpacing);
	}


	a {
		color: var(--textColor);
		font-weight: 600;

		&:visited {
			color: var(--visitedColor);
		}

		&:hover {
			color: var(--linkColor);
		}
	}


	main {
		max-width: var(--layoutWidth);
		margin: 0 auto;
		font-size: var(--step-0);

		h2 {
			font-size: var(--step-5);
			font-family: var(--altFontFamily);
			text-shadow: 0 -1px 0 rgba(255, 255, 255, 0.5);
			line-height: 1.3;

			@media screen and (min-width: 900px) {
				margin-left: -80px;
			}
		}

		h4 {
			font-size: var(--step-2);
			font-weight: normal;
		}

		h5 {
			// background: #f7f1cd;
			// color: #38362b;
			padding: var(--spacing);
			font-weight: normal;
			font-style: italic;
			border: 1px solid var(--borderColor);
		}

		blockquote {
			font-style: italic;
			border-left: 10px solid var(--borderColor);
			padding-left: var(--spacing);

			@media screen and (max-width: 320px) {
				margin-left: 0;
			}
		}

		hr {
			margin-block-start: 1em;
			margin-block-end: 1em;
			margin-inline-start: 0px;
			margin-inline-end: 0px;
			background: none;
			border: 1px solid var(--borderColor);
		}
	}
</style>