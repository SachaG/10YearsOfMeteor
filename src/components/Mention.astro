---
const { author, content, url } = Astro.props
---

<div class="mention">
  <div>
    <a class="avatar" href={author.url}><img src={author.photo} alt={author.name} /></a>
  </div>
  <div class="content">
    <h3><a href={author.url}>{author.name}</a></h3>
    <div>{content.text}</div>
    <a class="url" href={url}>{url}</a>
  </div>
</div>

<style lang="scss">
  .mention {
    margin-bottom: var(--quadrupleSpacing);
    display: flex;
    gap: var(--doubleSpacing);
  }

  .avatar {
    display: block;
    border-radius: 100%;
    border: 5px solid var(--altBackgroundColor);
    width: 120px;
    overflow: hidden;

    img {
      display: block;
      width: 100%;
      border-radius: 100%;
    }
  }

    h3 {
      margin: 0 0 5px 0;
      font-family: var(--altFontFamily);
      a{
        text-decoration: none;
      }
    }
    .url{
      font-size: var(--step--2);
    }
</style>